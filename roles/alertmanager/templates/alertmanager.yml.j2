global:
  resolve_timeout: 5m

route:
  group_by: ['alertname', 'instance']
  group_wait: 10s
  group_interval: 5m
  repeat_interval: 1h
  receiver: '{{ default_alert_receiver | default("slack-notifications") }}'

receivers:
  - name: 'slack-notifications'
    slack_configs:
      - api_url: "https://hooks.slack.com/services/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"
        channel: '#all-edwin'
        text: "ðŸ”” Test alert from Alertmanager (no template)"


inhibit_rules:
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'instance']
